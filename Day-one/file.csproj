<Project Sdk="Microsoft.NET.Sdk">

  <!-- The Sdk attribute specifies the SDK to be used for building the project.
       In this case, it's the .NET SDK. -->
  
  <PropertyGroup>
    <!-- OutputType specifies the type of output generated by the project.
         'Exe' means it's an executable (`.exe`) file. -->
    <OutputType>Exe</OutputType>

    <!-- TargetFramework indicates the target .NET framework version.
         In this case, the project targets .NET 7.0. -->
    <TargetFramework>net7.0</TargetFramework>

    <!-- ImplicitUsings enables implicit usings, a feature introduced in C# 10. -->
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Nullable enables nullable reference types, a feature introduced in C# 8. -->
    <Nullable>enable</Nullable>

    <!-- StartupObject specifies the class that contains the 'Main' method
         and will be the entry point when the application starts.
         In this case, it's the 'Swap' class. -->
         
    <StartupObject>Swap</StartupObject> 
  </PropertyGroup>

</Project>
